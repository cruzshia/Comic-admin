{
  "name": "raise",
  "version": "0.1.0",
  "private": true,
  "dependencies": {
    "@material-ui/core": "^4.9.5",
    "@material-ui/lab": "^4.0.0-alpha.46",
    "@testing-library/jest-dom": "^5.1.1",
    "@testing-library/react": "^10.0.1",
    "@testing-library/user-event": "^10.0.0",
    "@types/jest": "^25.1.4",
    "@types/node": "^13.9.1",
    "@types/react": "^16.9.23",
    "@types/react-dom": "^16.9.5",
    "@types/react-redux": "^7.1.7",
    "@types/react-router-dom": "^5.1.3",
    "@types/redux-logger": "^3.0.7",
    "babel-plugin-react-remove-properties": "^0.3.0",
    "clsx": "^1.1.0",
    "final-form": "^4.19.1",
    "final-form-arrays": "^3.0.2",
    "react": "^16.13.0",
    "react-app-rewired": "^2.1.5",
    "react-dom": "^16.13.0",
    "react-dropzone": "^10.2.1",
    "react-final-form": "^6.4.0",
    "react-final-form-arrays": "^3.1.1",
    "react-intl": "^4.1.1",
    "react-redux": "^7.2.0",
    "react-router-dom": "^5.1.2",
    "react-scripts": "3.4.0",
    "redux": "^4.0.5",
    "redux-observable": "^1.2.0",
    "rxjs": "^6.5.4",
    "typescript": "^3.8.3"
  },
  "scripts": {
    "start": "PORT=9000 react-app-rewired start",
    "build": "GENERATE_SOURCEMAP=false react-app-rewired build",
    "test": "react-app-rewired test --env=jsdom",
    "eject": "react-scripts eject",
    "lint": "eslint --ext .ts --ext .tsx src",
    "extract-locale": "extract-messages -l=en,ja -o src/translation -d en --flat 'src/**/messages.ts'",
    "storybook": "start-storybook -p 9009 -s storybook-assets",
    "build-storybook": "build-storybook -s storybook-assets -o build/static/storybook",
    "deploy": "mkdir -p ../priv/static && cp -r build/* ../priv/static",
    "cypress:open": "cypress open",
    "cypress": "cypress run"
  },
  "lint-staged": {
    "src/translation/*.json": [
      "npm run extract-locale"
    ],
    "src/**/*.{js,jsx,ts,tsx}": [
      "prettier --write",
      "eslint --ext .ts --ext .tsx src"
    ]
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged",
      "commit-msg": "echo $HUSKY_GIT_PARAMS"
    }
  },
  "eslintConfig": {
    "extends": "react-app",
    "overrides": [
      {
        "files": [
          "**/*.ts?(x)"
        ],
        "rules": {
          "no-else-return": "error",
          "react-hooks/exhaustive-deps": "error",
          "@typescript-eslint/no-unused-vars": "error",
          "no-nested-ternary": "error"
        }
      }
    ]
  },
  "jest": {
    "moduleNameMapper": {
      "@src/(.*)": "<rootDir>/src/$1"
    }
  },
  "browserslist": {
    "production": [
      ">0.2%",
      "not dead",
      "not op_mini all"
    ],
    "development": [
      "last 1 chrome version",
      "last 1 firefox version",
      "last 1 safari version"
    ]
  },
  "devDependencies": {
    "@storybook/addon-actions": "^5.3.12",
    "@storybook/addon-knobs": "^5.3.13",
    "@storybook/addon-links": "^5.3.12",
    "@storybook/addons": "^5.3.12",
    "@storybook/preset-create-react-app": "^1.5.2",
    "@storybook/react": "^5.3.12",
    "@testing-library/cypress": "^6.0.0",
    "cypress": "^4.4.1",
    "extract-react-intl-messages": "^2.3.5",
    "husky": "^4.2.3",
    "lint-staged": "^10.0.7",
    "prettier": "^1.19.1",
    "redux-logger": "^3.0.6"
  },
  "proxy": "http://localhost:8080"
}
